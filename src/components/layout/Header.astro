---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'
---

<header>
  <nav>
    <a href="/">
      <img src="/sammarxz.jpeg" alt="Sam Marxz" class="profile-photo" />
      <div class="title-info">
        <span>{themeConfig.site.title}</span>
        <span class="subtitle"> â€” Designer && Desenvolvedor</span>
      </div>
    </a>
    <ThemeToggle />
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  header a {
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    text-decoration: none;
    min-width: 3rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .profile-photo {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }
  
  .title-info {
    display: flex;
    flex-direction: column;
  }
</style>
